{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "jsx": "preserve",
        "paths": {
            "@esTypes/*": [
                "./src/jsx"
            ],
            "@js/*": [
                "./src/js/*"
            ],
            "@jsx/*": [
                "./src/jsx/*"
            ],
            "@jslib/*": [
                "./src/js/lib/*"
            ],
            "@jsxlib/*": [
                "./src/jsx/lib/*"
            ],
            "@types-for-adobe/*": [
                "./node_modules/types-for-adobe/*"
            ],
        }
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./src/jsx"
    ]
}