{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDirs": [
            "./src"
        ],
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/types-for-adobe"
        ],
        "types": [
            "./index",
            "./node_modules/types-for-adobe/AfterEffects/22.0"
        ]
    },
    "include": [
        "src/main/*.tsx",
        "src/main/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "env": {
        "tsx-linker": {
            "tsconfig": {
                "tsconfig": "tsconfig.json"
            },
            "rollup": {
                "input": "./src/main/main.tsx",
                "outputFile": "dist/bundle-dev.jsx",
                "plugins": []
            }
        },
        "development": {
            "tsconfig": {},
            "rollup": {
                "input": "./src/main/main.tsx",
                "outputFile": "dist/bundle-dev.jsx",
                "plugins": []
            }
        },
        "production": {
            "tsconfig": {
                "removeComments": true
            },
            "rollup": {
                "input": "./src/main/main.tsx",
                "outputFile": "dist/bundle-prod.jsx",
                "plugins": [
                    "rollup-plugin-uglify"
                ]
            }
        }
    }
}