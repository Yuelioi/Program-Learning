{
    "compilerOptions": {
        "module": "es6",
        "target": "ES3",
        "useDefineForClassFields": false,
        "allowJs": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "resolveJsonModule": false,
        "isolatedModules": false,
        "noLib": true,
        "noEmit": false,
        "baseUrl": ".",
        "jsx": "preserve",
        "rootDirs": [
            "./src"
        ],
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/types-for-adobe"
        ],
        "types": [
            "./node_modules/types-for-adobe/AfterEffects/22.0"
        ],
        "paths": {
            "@utils/*": [
                "./utils/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "utils/**/*.tsx",
        "utils/prop.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "env": {
        "ts-link": {
            "plugins": []
        },
        "development": {
            "outputFile": "dist/bundle-dev.jsx",
            "plugins": []
        },
        "production": {
            "outputFile": "dist/bundle-prod.jsx",
            "plugins": [
                "rollup-plugin-uglify"
            ]
        }
    }
}