{
    "compilerOptions": {
        "target": "ES3",
        "ignoreDeprecations": "5.0",
        "useDefineForClassFields": false,
        "allowJs": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "preserve",
        "rootDirs": [
            "./src"
        ],
        "outDir": "./dist",
        "types": [
            "./node_modules/types-for-adobe/AfterEffects/22.0/index.d.ts"
        ],
        "paths": {
            "@utils/*": [
                "./utils/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./utils/**/*.tsx",
        "./utils/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}